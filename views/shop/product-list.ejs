<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>


<main>
    <% if(prods.length > 0){ %>
        <div class="grid">
            <% prods.forEach(({id, title, imageUrl, price, description}) =>{ %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= imageUrl %>"
                             alt="<%= title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$<%= price %></h2>
                        <p class="product__description"><%= description %></p>
                    </div>
                    <div class="card__actions">
                        <a href="/products/<%= id %>" class="btn">Details</a>
                        <%- include('../includes/add-to-cart.ejs', {id:id, title:title, imageUrl:imageUrl, price:price, description:description}) %>
                    </div>
                </article>
            <% }) %>
        </div>
    <% } else{ %>
        <h1>No Product Found ðŸ˜¢</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>
